import tensorflow as tf
from tensorflow.keras import layers, models


def get_zombiev2_model(shape):
    model = models.Sequential([
        layers.Conv2D(32, (3, 3), activation='relu', input_shape=shape),
        layers.MaxPooling2D((2, 2)),
        layers.Conv2D(64, (3, 3), activation='relu'),
        layers.MaxPooling2D((2, 2)),
        layers.Conv2D(128, (3, 3), activation='relu'),
        layers.Flatten(),
        layers.Dense(128, activation='relu'),
        layers.Dense(1, activation='sigmoid')  # Binary classification for card or not
    ])

    model.compile(optimizer='adam', loss='binary_crossentropy', metrics=['accuracy'])
    return model

shape = (None, None, None)

zombiev2_model = get_zombiev2_model(shape)
zombiev2_model.summary()
model_path = ''
zombiev2_model.save(model_path)

